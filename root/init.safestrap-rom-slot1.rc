on fs
    mount rootfs rootfs / rw remount
    mkdir /ss 0777 root root
    chown root root /ss
    chmod 0777 /ss
    mount vfat /dev/block/emstorage /ss

    mount ext3 loop@/ss/safestrap/rom-slot1/system.img /system wait discard noatime nodiratime barrier=1
    mount ext3 loop@/ss/safestrap/rom-slot1/userdata.img /data discard nosuid nodev noatime nodiratime
    mount ext3 loop@/ss/safestrap/rom-slot1/cache.img /cache discard nosuid nodev noatime nodiratime

